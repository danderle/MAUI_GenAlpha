    <!--Base Button-->
    <Style TargetType="Button" x:Key="BaseButtonStyle">
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
        <Setter Property="FontFamily" Value="FontAwesomeSolid" />
        <Setter Property="TextColor" Value="{StaticResource DarkWhite}" />
    </Style>
    
    <!--Default Button-->
    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource BlueGreen}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Padding" Value="10 30" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}" />
        <!--TODO implement a mouse enter / leave trigger for background-->
    </Style>

