    <!--Connect4 Button-->
    <Style TargetType="{x:Type Button}" x:Key="Connect4Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="FontFamily" Value="{StaticResource OpenSansRegular}" />
        <Setter Property="WidthRequest" Value="{Binding Path=HeightRequest, Source={RelativeSource Self}}"/>
        <Setter Property="CornerRadius" Value="{Binding Path=HeightRequest, Source={RelativeSource Self}}"/>
    </Style>
    
